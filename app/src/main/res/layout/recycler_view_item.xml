<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
<RelativeLayout
              android:orientation="vertical"
              android:padding="12dp"
              android:id="@+id/toDoListLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
  <CheckBox
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_centerVertical="true"
      android:id="@+id/checkbox" />
  <TextView
      android:id="@+id/mainText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@+id/checkbox"
      android:layout_toStartOf="@+id/optionsButton"
      android:layout_centerVertical="true"
      android:textColor="#000"
      android:layout_marginStart="10dp"
      tools:text="@tools:sample/lorem" />

    <ImageButton
        android:id="@+id/optionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#00FAFAFA"
        android:contentDescription="Button submenu with edit and delete options"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_task_options" />

</RelativeLayout>
    </androidx.cardview.widget.CardView>